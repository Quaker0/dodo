{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2019",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "src",
      "incremental": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules"
    ]
  
  }